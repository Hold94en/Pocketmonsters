    <item name="android:statusBarColor">@android:color/black</item>
    <item name="android:windowLightStatusBar">false</item>

    <!-- Global type attributes -->
    <!--Material type attributes-->
    <item name="textAppearanceHeadline1">@style/TextAppearance.PocketTheme.Headline1</item>
    <item name="textAppearanceHeadline2">@style/TextAppearance.PocketTheme.Headline2</item>
    <item name="textAppearanceHeadline3">@style/TextAppearance.PocketTheme.Headline3</item>
    <item name="textAppearanceHeadline4">@style/TextAppearance.PocketTheme.Headline4</item>
    <item name="textAppearanceHeadline5">@style/TextAppearance.PocketTheme.Headline5</item>
    <item name="textAppearanceHeadline6">@style/TextAppearance.PocketTheme.Headline6</item>
    <item name="textAppearanceSubtitle1">@style/TextAppearance.PocketTheme.Subtitle1</item>
    <item name="textAppearanceSubtitle2">@style/TextAppearance.PocketTheme.Subtitle2</item>
    <item name="textAppearanceBody1">@style/TextAppearance.PocketTheme.Body1</item>
    <item name="textAppearanceBody2">@style/TextAppearance.PocketTheme.Body2</item>
    <item name="textAppearanceButton">@style/TextAppearance.PocketTheme.Button</item>
    <item name="textAppearanceCaption">@style/TextAppearance.PocketTheme.Caption</item>
    <item name="textAppearanceOverline">@style/TextAppearance.PocketTheme.Overline</item>
    <!-- Global shape attributes -->
    <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
    <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
    <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance.LargeComponent</item>
    <!-- Card widget style attribute -->
    <item name="materialCardViewStyle">@style/AppCard</item>

    <item name="android:windowContentTransitions">true</item>
</style>


<style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
    <item name="android:windowBackground">@drawable/background_splash_screen</item>
</style>

<style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">4dp</item>
</style>

<style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">8dp</item>
</style>

<style name="AppShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">8dp</item>
</style>

    <style name="CardViewHud" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/card_hud</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="cardElevation">4dp</item>
    </style>


    <style name="card_hud">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
    </style>
